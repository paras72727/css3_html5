<form>
<h2>form features</h2>
<hr style="background:#EB565B;height:4px;border:0px; border-radius:4px;">
<label for="user">User Name</label>
<input type="text" name="user" id="user" required placeholder="enter name here">
<label for="pass">password</label>
<input type="pasword" name="password" id="pass" required placeholder="enter password here">
<label for="mail">e-mail</label>
<input type="email" name="e-mail" id="mail" required placeholder="enter email address here">
<label for="no">phone number</label>
<input type="number" name="number" id="no" min="10" max="10">
<label for="bd">birthday</label>
<input type="date" name="bd" id="bd"required placeholder="enter birth date here">
<label for="w">week</label>
<input type="week" name="w" id="w">
<label for="m">month</label>
<input type="month" name="m" id="m">
<label for="t">time</label>
<input type="time" name="t" id="t">
<label for="r">range</label>
<input type="range" name="r" id="r" min="0"max="10"value="4" step="2">
<label for="c">color</label>
<input type="color" name="c" id="c">
<label for="url">URL</label>
<input type="url" name="url" id="url">
<label for="con">country</label>
<input list="country" id="con" name="con">
<datalist id="country">
<option>india</option>
<option>USA</option>
<option>Londan</option>
<option>paris</option>
<option>new york</option>
<option>russia</option>
</datalist>
<input type="submit" value="submit form" style=" color:red;width:80%;height:40px;margin:0 auto;border:0px;border-radius:0px; box-shadow:1px 1px 4px blue;">
</form>
<pre>
#css code
form{
width:500px;
margin:0 auto;
background:linear-gradient(to top ,#1A1A19,#313130,#373737);
padding:10px;
color:#EB565B;
border:2px solid #EB565B;
border-radius:14px;
}
input{
width:200px;
border:2px solid #EB565B;
display:block;
padding:6px;
margin:4px;
border-radius:14px;
box-shadow:inset 0 0 4px #1A1A19;
outline:none;
}
input:focus{
box-shadow: 0 0 6px #EB565B;
}
